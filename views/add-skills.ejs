<!DOCTYPE html>
<html>
<head>
  <title>Add Skill | SyncSkills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">SyncSkills</a>
      <div class="d-flex">
        <a class="btn btn-outline-light me-2" href="/dashboard">Dashboard</a>
        <a class="btn btn-danger" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Add Skill Form -->
  <div class="container my-5" style="max-width: 600px;">
    <div class="card shadow-lg rounded-4">
      <div class="card-body">
        <h3 class="card-title text-center mb-4">Add New Skill</h3>
        <form action="/skills/add" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Skill Title</label>
            <input type="text" name="title" class="form-control" id="title" placeholder="e.g. React, Node.js" required>
          </div>

          <div class="mb-3">
            <label for="category" class="form-label">Skill Category</label>
            <input type="text" name="skillCategory" class="form-control" id="category" placeholder="e.g. Frontend, Backend">
          </div>

          <button type="submit" class="btn btn-primary w-100">Add Skill</button>
        </form>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3 mt-5">
    &copy; <%= new Date().getFullYear() %> SyncSkills. All rights reserved.
  </footer>

</body>
</html>
