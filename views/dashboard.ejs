<!DOCTYPE html>
<html>
<head>
  <title>Dashboard | SyncSkills</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">SyncSkills</a>

      <!-- Search Bar -->
      <form class="d-flex mx-auto" role="search" action="/dashboard" method="GET">
        <input class="form-control me-2" type="search" name="skill" placeholder="Search by Skill (e.g. React)" aria-label="Search">
        <button class="btn btn-outline-light" type="submit">Search</button>
      </form>

      <!-- Buttons -->
      <div class="d-flex">
        <a class="btn btn-outline-light me-2" href="/profile">My Profile</a>
        <a class="btn btn-danger" href="/logout">Logout</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container my-5">
    <h2 class="text-center mb-4">Welcome, <%= currentUser.name %> ðŸ‘‹</h2>
    <div class="row">
      <% allUsers.forEach(user => { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm rounded-4 h-100">
            <div class="card-body">
              <h5 class="card-title"><%= user.name %></h5>
              <p class="text-muted mb-2"><%= user.email %></p>
              <h6 class="mb-2">Skills:</h6>
              <ul class="list-group list-group-flush">
                <% if (user.skills.length > 0) { %>
                  <% user.skills.forEach(skill => { %>
                    <li class="list-group-item">
                      <strong><%= skill.title %></strong>
                      <% if (skill.skillCategory) { %>
                        <span class="badge bg-secondary ms-2">[<%= skill.skillCategory %>]</span>
                      <% } %>
                    </li>
                  <% }) %>
                  
                  
                <% } else { %>
                  <li class="list-group-item text-muted">No skills listed</li>
                <% } %>
              </ul>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <!-- Footer -->
  <footer class="bg-dark text-white text-center py-3">
    &copy; <%= new Date().getFullYear() %> SyncSkills. All rights reserved.
  </footer>

</body>
</html>
